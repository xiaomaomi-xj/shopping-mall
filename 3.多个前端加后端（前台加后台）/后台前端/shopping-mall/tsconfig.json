{
  "compilerOptions": {
    "target": "ES5",
    "module": "ES2015",
    "rootDir": "./ts", 
    "outDir": "./js",
    "allowJs": true, 
    "checkJs": true, 
    "removeComments": true,
    "noEmitOnError": true, 
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true, 
    "strict": true, 
    "skipLibCheck": true 
  }
}